<div class="container">
  <h1><%= t('games').capitalize %></h1>
  <div class="row justify-content-center">
    <div class="col-4">
      <%= render 'game', game: @games.first, round: @round %>
    </div>
  </div>

  <div class="row justify-content-between">
    <div class="col-4">
      <div class="centered-column">
        <%= simple_form_for [@games.first, @round] do |f| %>
          <%= button_tag :submit, data: { disable_with: 'Create round'}, id: 'create_trivia', class: 'game__icon' do %>
            <%#= yield %>
            <%= icon 'fa-solid', @games.first.icon_name %>
          <% end %>
        <% end %>
        <%#= render 'rounds/new', game: @games.first, round: @round do %>
        <%# end %>
        <h2><%= @games.first.name %></h2>
      </div>
    </div>
    <%# <div class="col-4">
      <%= render 'game', game: @games.first, round: @round %>
    </div> %>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= link_to 'leaderboard_path' do %>
        <div class='leaderboard__card'>
          <%#= image_tag 'leaderboard.png', width: '100%' %>
          <p class='mb-0'>Leaderboard</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
