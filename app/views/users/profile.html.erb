<div class="container">
  <div class="profile">
    <div class="profile__header">
      <div class="row justify-content-center mb-3">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4 text-center">
          <%= image_tag current_user.image_url, class: 'avatar-large' %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
          <div class="profile__info">
            <div class="row">
              <div class="col-2">
                <%= icon 'fa-solid', 'signature' %>
              </div>
              <div class="col-10">
                <p><%= current_user.full_name %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <%= icon 'fa-solid', 'location-arrow' %>
              </div>
              <div class="col-10">
                <p><%= current_user.street %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-2">
                <%= icon 'fa-solid', 'inbox' %>
              </div>
              <div class="col-10">
                <p><%= current_user.email %></p>
              </div>
            </div>
            <%#= icon 'fa-solid', 'chevron-right' %>
          </div>
        </div>
      </div>
    </div>
    <div class="profile__actions">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4"></div>
      </div>
      <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
          <div class="profile__action">
            <div class="row">
              <div class="col-10">
                <%= link_to "Edit profile", edit_user_registration_path, class: 'link-mine' %>
              </div>
              <div class="col-2">
                <%= icon 'fa-solid', 'chevron-right', class: 'icon--hover' %>
              </div>
            </div>
            <div class="row">
              <div class="col-10">
              </div>
              <div class="col-2">
              </div>
            </div>
            <div class="row">
              <div class="col-10">
              </div>
              <div class="col-2">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
