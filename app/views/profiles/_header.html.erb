<div class="profile mt-3 mb-4">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-12 text-center">
      <%= image_tag user.image_url, class: 'avatar-large' %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-8">
      <div class="profile__info">
        <div class="row align-items-center">
          <div class="col-2">
            <%= icon 'fa-solid', 'signature' %>
          </div>
          <div class="col-10">
            <h1><%= user.full_name %></h1>
          </div>
        </div>
        <div class="row">
          <div class="col-2">
            <%= icon 'fa-solid', 'location-arrow' %>
          </div>
          <div class="col-10">
            <p class='mb-0'><%= user.street %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-2">
            <%= icon 'fa-solid', 'inbox' %>
          </div>
          <div class="col-10">
            <p class='mb-0'><%= user.display_email %></p>
          </div>
        </div>
        <%#= icon 'fa-solid', 'chevron-right' %>
      </div>
    </div>
  </div>
</div>
