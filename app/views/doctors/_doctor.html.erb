<div data-controller="ajax-render">
  <div class="card__user">
    <div class="">
      <%= link_to doctor_path(doctor) do %>
        <p><%= doctor.full_name %></p>
      <% end %>
      <p class="card__sub_info"><%= "#{doctor.city}" %></p>
    </div>
    <div class="card__user__info">
      <div class="doc__infos">
        <div class="doctor__info">
          <p><%= t('available') %></p>
          <p><strong><%= t(doctor.available? ? 'yes_sir' : 'no_sir') %></strong></p>
        </div>
        <div class="doctor__info">
          <p><%= t('home_care') %></p>
          <p><strong><%= t(doctor.home_care? ? 'yes_sir' : 'no_sir') %></strong></p>
        </div>
      </div>
      <div class="" style='padding: 0; font-size: 2rem;'>
        <%= link_to doctor_path(doctor),
                    style: 'position: relative;',
                    data: {
                      action: 'click->ajax-render#update',
                      ajax_render_target: 'link'
                    } do %>
          <%= icon 'fa-solid','pager' %>
          <div class="d-none" data-ajax-render-target='pagerLight'></div>
        <% end %>
      </div>
    </div>
  </div>

  <div data-ajax-render-target='container'></div>
</div>
