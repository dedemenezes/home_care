<div class="d-flex py-2 justify-content-center align-items-center border-bottom border-primary mb-5">
  <p class="m-0"><strong>LOG IN OR SIGN UP</strong></p>
</div>

<%# d-flex mh-100 flex-column align-items-center justify-content-center %>
<main class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-5 mb-5">
      <h1 class='text-center'>WELCOME TO <span class="border-bottom border-primary border-2">HOME CARE</span></h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-5">
      <%= form_with for: :phone, url: create_login_path, html: { class: 'w-100', data: { controller: 'format-phone-number' } } do |f| %>
        <div class="form-group-mine border border-primary rounded-top-mine bg-white">
          <%= label_tag 'country', 'COUNTRY/REGION', class: 'w-100 px-4 py-2' %>
          <%= select_tag 'country',
                        options_for_select(CountriesHelper::LIST, CountriesHelper::LIST.sample),
                        class: 'w-100 border-0 px-4 py-2' %>
        </div>
        <%= text_field_tag 'phone_number',
                          nil,
                          placeholder: '(21) **** - ****',
                          data: {
                            action: 'keyup->format-phone-number#nicely',
                            format_phone_number_target: 'input'
                          },
                          class: 'w-100 border border-primary rounded-bottom-mine px-4 py-2 mb-3'  %>
        <span data-format-phone-number-target="errors"></span>
        <fieldset class="form-group boolean optional role mb-3">
          <div class="form-check d-flex justify-content-center my-4 px-0">
            <label class="form-check-label boolean optional pe-1" for="role">Patient</label>
            <input name="role" type="hidden" value="patient">
            <input class="form-check-input boolean optional toggle" type="checkbox" value="doctor" name="role" id="role">
            <label class="form-check-label boolean optional" for="role">Doctor</label>
          </div>
        </fieldset>
        <%= submit_tag 'Continue', class: 'btn btn-lg btn-primary rounded-pill w-100 mb-3' %>
      <% end %>
    </div>
  </div>


</main>
<div class="d-flex justify-content-center align-items-center py-2">
  <p class='mb-0 me-2'>Already have an account?</p>
  <%= link_to "Log in", new_session_path(User.new) %>
</div>
